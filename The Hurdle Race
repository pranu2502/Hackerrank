#include<stdio.h>

void swap(int *x , int *y){
    int t = *x;
    *x = *y;
    *y=t;
}


int main()
{
    int n,k,i,j,temp,p;
    int array[1000];
    scanf("%d %d",&n,&k);
    for(i = 0;i<n;i++)
    {
        scanf("%d ",&array[i]);
    }
    for(i = 0;i<n;i++)
    {
        for(j = 0;j<n-i-1;j++)
        {
            if(array[j]>array[j+1])
            {
                swap(&array[j] , &array[j+1]);
            }
        }
    }
    p = array[n-1] - k;
    if(p>=0)
    {
        printf("%d",p);
   }
    else
    {
        printf("0");
    }
}
